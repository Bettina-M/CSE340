<% if (title){%>
<h1><%= title %></h1>
<%} else{
    res.redirect('/')
}%>
<%- messages() %>

<form id ="addClass-form"action="/inv/add-classification" method="post">
    <p>Field is required</p>
    <fieldset>
        <label for="classification_name">Classification Name</label>
        <input 
        type="text" 
        name="classification_name" 
        id="classification_name" 
        pattern="^[A-Za-z0-9]+$" 
        title="Only letters and numbers allowed. No spaces or special characters." 
        required>
        <button type="submit" id="add-classbtn">Add Classification</button>
    </fieldset>
</form>